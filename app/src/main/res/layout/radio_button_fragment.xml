<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.RadioButtonFragment" android:id="@+id/constraintLayout">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewQuestion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Pergunta"
            app:layout_constraintHorizontal_bias="0.0"
            android:textColor="@android:color/background_light"/>
    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioGroupFrag"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewQuestion" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.022"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonAlternative_a"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textColor="@android:color/background_light"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonAlternative_b"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textColor="@android:color/background_light"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonAlternative_c"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textColor="@android:color/background_light"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonAlternative_d"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textColor="@android:color/background_light"
                android:visibility="visible"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioButtonAlternative_e"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textColor="@android:color/background_light"
                android:visibility="visible"/>
    </RadioGroup>
</android.support.constraint.ConstraintLayout>