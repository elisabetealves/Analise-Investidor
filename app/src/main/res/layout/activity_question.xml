<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.QuestionActivity"
        android:id="@+id/questionLayout"
        android:background="#21507E">

    <FrameLayout
            android:layout_width="366dp"
            android:layout_height="507dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:id="@+id/frameLayoutQuestion"
            android:padding="16dp"
            app:layout_constraintHorizontal_bias="0.461"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnProximo">

    </FrameLayout>

    <Button
            android:text="@string/btnProximo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnProximo"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/btn"
            android:textColor="#21507E"
            android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/frameLayoutQuestion" />
</android.support.constraint.ConstraintLayout>